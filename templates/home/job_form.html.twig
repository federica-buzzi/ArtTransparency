<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6">
      <form id="userForm" class="reveal-content">
        <div class="form-group">
          {{ form_start(myJobForm) }}
        </div>
        <div class="form-group">
          {{
            form_row(myJobForm.country, {
              label: "In which of the following countries do you work?"
            })
          }}
        </div>
        <div class="form-group">
          {{
            form_row(myJobForm.role, {
              label: "Which one of these roles better describes your position?"
            })
          }}
        </div>
        <div class="form-group">
          {{
                    form_row(myJobForm.startingSalary, {
                      label: "What was your starting salary?"
                      type: "number"
                    })
          }}
        </div>
        <div class="form-group">
          {{
                    form_row(myJobForm.yearStartingSalary, {
                      label: "Year of your starting salary"
                      type: "number"
                    })
          }}
        </div>
        <div class="form-group">
          {{
            form_row(myJobForm.yearsExperience, {
              label: "What was/is your ending/current salary?",
              type: "number"
            })
          }}
        </div>
        <div class="form-group">
          {{
                    form_row(myJobForm.otherSourcesIncome, {
                      label: "Year of your ending/current salary"
                      type: "number"
                    })
          }}
        </div>
        <div class="form-group">
          {{
                    form_row(myJobForm.yearsExperience, {
                      label:
                        "Type of contract",
                    })
          }}
        </div>
        <div class="form-group">
          {{
            form_row(myJobForm.otherSourcesIncome, {
              label: "Degrees required"
            })
          }}
        </div>
        <div class="form-group">
          {{
            form_row(myJobForm.yearsExperience, {
              label:
                "How many years of experience do you have in the art field?",
              type: "number"
            })
          }}
        </div>
      </form>
    </div>
  </div>
</div>
