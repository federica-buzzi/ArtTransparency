{% extends 'base.html.twig' %} {% block body %}
<div class="section-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="section-container-spacer text-center">
          <h1 class="h2">03 : Form</h1>
        </div>
        <div class="section-container-spacer text-center">
          <h3 class="h3">About you</h3>
        </div>
        <div class="container h-100">
          <div class="row h-100 justify-content-center align-items-center">
            <div class="col-10 col-md-8 col-lg-6">
              <form id="userForm" class="reveal-content">
                <div class="form-group">
                  {{ form_start(userForm) }}
                </div>
                <div class="form-group">
                  {{
                    form_row(userForm.gender, {
                      label: "How would you describe your gender?"
                    })
                  }}
                </div>
                <div class="form-group">
                  {{
                    form_row(userForm.ethnicity, {
                      label: "How would you describe your ethnicity?"
                    })
                  }}
                </div>
                <div class="form-group">
                  {{
                    form_row(userForm.degrees, {
                      label: "What is your highest degree?"
                    })
                  }}
                </div>
                <div class="form-group">
                  {{
                    form_row(userForm.otherSourcesIncome, {
                      label: "Do you have any other souce of income?"
                    })
                  }}
                </div>
                <div class="form-group">
                  {{
                    form_row(userForm.yearsExperience, {
                      label:
                        "How many years of experience do you have in the art field?",
                      type: "number"
                    })
                  }}
                </div>
                <input type="submit" class="btn" value="Envoyer" />
                <button
                  type="button"
                  class="add_item_link"
                  data-collection-holder-class="jobs"
                >
                  Add a tag
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
